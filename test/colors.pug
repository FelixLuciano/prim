doctype html
html(lang="en" dir="ltr")
  
  head
    meta(charset="utf-8")
    meta(name='viewport' content='width=device-width, initial-scale=1')
      
    title Prism - Colors test
    
    link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:300,900')
    link(rel='stylesheet' type='text/css' href='/dist/css/prim.css')
    
    
  body
  
    header.container.p-3
      .row.full-row
        .col-12.pv-4
          .l-20.w-bold Colors
  
  
  
    section.container.p-xs-1.p-sm-3
      .row.full-row.spacing-xs-1.spacing-sm-3
      
        //-------------------------
        //-:::: Basic colors   ::::
        //-------------------------
        each color in ['red', 'orange', 'yellow', 'lime', 'green', 'cyan', 'blue', 'sapphire', 'purple', 'fuchsia']
          - classe = `bg-${color}`
          
          .col-xs-6.col-sm-3.col-md-2.flex
            
            .col-12.ratio-wide.fill-height(class=classe): div.p-3
              .l-12.w-bold #{color.toUpperCase()}
                
            .col-12.flex.spacing-1.pt-1
              each _, i in Array(4)
                - classe = `bg-${color}-l${i + 1}`
                
                .col-3.ratio-square(class=classe)
                
                
              each _, i in Array(4)
                - classe = `bg-${color}-d${i + 1}`
                
                .col-3.ratio-square(class=classe)
            
                
        //-----------------------------
        //-:::: Full tone colors   ::::
        //-----------------------------
        each color in ['gray', 'bluegray']
          - classe = `bg-${color}`
          
          .col-xs-6.col-sm-3.col-md-2.flex.wrap
            .col-12.ratio-wide(class=classe): div.p-3
              
              .l-12.w-bold
                = color.toUpperCase()
                
            .col-12.flex.spacing-1.pt-1
              each _, i in Array(6)
                - classe = `bg-${color}-l${i + 1}`
                
                .col-2.ratio-square(class=classe)
                
                
              each _, i in Array(12)
                - classe = `bg-${color}-d${i + 1}`
                
                .col-2.ratio-square(class=classe)
              
              
        //----------------------------
        //-::::  Standard colors  ::::
        //----------------------------
        each color in ['black', 'dark', 'light', 'white', 'primary', 'secondary', 'palette-1', 'palette-2', 'palette-3', 'palette-4', 'palette-5', 'palette-6']
          - classes = [`bg-${color}`]
          
          if color === 'dark' || color === 'black'
            - classes.push('c-white')
          
          .col-xs-6.col-sm-3.col-md-2.ratio-wide(class=classes.join(' ')): div.p-3
              
            .l-12.w-bold
              = color.toUpperCase()
